#include <iostream>
#include <string>
#include <locale.h>
#include <cstdlib>
#include <time.h>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Portuguese");
	srand(time(0));
	
    int N;
    cin >> N;

    int Altura, a;
    int maior_altura = 0;
    int contador = 0;

    for (int i = 0; i < N; i++) {
        cin >> a;
           Altura;

        if (Altura > maior_altura) {
            contador++;
            maior_altura = Altura;
        }
    }

    cout << contador << endl;

    return 0;
}
	
